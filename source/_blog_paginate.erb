<% if paginate && num_pages > 1 %>
<div class="blogPageSelect">
    <div class="blogPre">
      <% if paginate %>
        <% if prev_page %>
          <%= link_to 'Previous', prev_page %>
        <% end %>
      <%end %>
    </div>
    <div class="blogCurrent">
      <% if paginate && num_pages > 1 %>
        <span><%= page_number %> / <%= num_pages %></span>
      <% end %>
    </div>
    <div class="blogNext">
      <% if paginate %>
        <% if next_page %>
        <%= link_to 'Next', next_page %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% end %>